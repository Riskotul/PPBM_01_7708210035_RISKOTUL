<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/login"
    tools:context=".MieayamActivity">

    <ImageView
        android:id="@+id/foodImageMieayam"
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/mieayam" />

    <TextView
        android:id="@+id/foodDescriptionMieayam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodImageMieayam"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Mie Ayam adalah hidangan Indonesia yang terdiri dari mie pangsit dengan potongan daging ayam, kuah kaldu gurih, dan sayuran segar." />

    <RatingBar
        android:id="@+id/foodRatingMieayam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodDescriptionMieayam"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:stepSize="0.5" />

</RelativeLayout>