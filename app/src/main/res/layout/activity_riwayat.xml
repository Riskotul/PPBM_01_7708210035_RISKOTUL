<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="@drawable/bgputih"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="157dp"
            android:layout_marginTop="55dp"
            android:text="kafe.ABG"
            android:textColor="#000"
            android:textSize="16dp" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:text="Jl.sukabirus,bojongsoang bandung"
            android:textColor="#000"
            android:textSize="13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="50dp"
            android:background="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/berhasil"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/custom_edittext"
            android:layout_marginTop="10dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Total"
                android:textColor="#000"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/total"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp">


            <TextView
                android:id="@+id/belanja"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Total Belanja"
                android:textColor="#000"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/belanja"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apakah Anda Puas Dengan Pelayanan Di Kafe Ini?"
                android:textColor="@color/black"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:text="Ya"
                    android:textColor="@color/black" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:text="No"
                    android:textColor="@color/black" />
            </RadioGroup>
        </RelativeLayout>

        <TextView
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="120dp"
            android:layout_marginTop="40dp"
            android:text="Terima Kasih"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="95dp"
            android:layout_marginTop="10dp"
            android:text="Atas Kunjungan Anda"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="90dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="kita butuh makan bukan hanya harapan"
            android:textColor="#000"
            android:textSize="12dp" />
    </LinearLayout>
</ScrollView>
