<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/login"
    tools:context=".BurgerActivity">

    <ImageView
        android:id="@+id/foodImageBurger"
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/burger" />

    <TextView
        android:id="@+id/foodDescriptionBurger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodImageBurger"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Tutup mata Anda dan bayangkan gigitan pertama ke dalam burger yang juicy dan lezat dengan daging panggang yang gurih, saus istimewa, dan sentuhan kres kres dari sayuran segar, itulah definisi burger kenikmatan sejati." />

    <RatingBar
        android:id="@+id/foodRatingBurger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodDescriptionBurger"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:stepSize="0.5" />

</RelativeLayout>