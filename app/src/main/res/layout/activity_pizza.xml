<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/login"
    tools:context=".PizzaActivity">

    <ImageView
        android:id="@+id/foodImagePizza"
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/pizza" />

    <TextView
        android:id="@+id/foodDescriptionPizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodImagePizza"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Pizza adalah hidangan lezat yang terdiri dari adonan bulat yang ditutupi dengan saus tomat, keju, dan berbagai macam topping, lalu dipanggang hingga keemasan, menciptakan perpaduan cita rasa yang gurih, manis, dan lezat." />

    <RatingBar
        android:id="@+id/foodRatingPizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodDescriptionPizza"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:stepSize="0.5" />

</RelativeLayout>